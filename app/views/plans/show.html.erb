<h2 class="ls-title-intro ls-ico-user"><%= t('show_plan') %></h2>

<span>
  <h3><%= @plan.name %></h3>
  <hr>
  <p><strong><%= t('activerecord.attributes.plan.description') %>: </strong> <%= @plan.description %></p>
  <p><strong><%= t('activerecord.attributes.plan.product') %>: </strong> <%= @plan.product.name %></p>

  <div class='group'>
    <p><strong><%= t('activerecord.attributes.plan.details') %>:</strong></p>
    <ul>
      <% @plan.details.each do |detail| %>
      <li><%= detail %></li>
      <% end %>
    </ul>
  </div>

<div class='group'>
  <h4><%= t('prices') %>:</h4>
  <% @plan.valid_prices.each do |price| %>
    <p><%= price.periodicity.name %><br>
       <%= price.value %></p>
  <% end %>
</div>

  <p><%= link_to t('back'), :back %>
     <%= link_to t('edit_plan'), edit_plan_path(@plan) %></p>

</span>
